<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jade.user.mapper.UserInfoMapper">

    <resultMap type="com.jade.user.entity.UserInfo" id="UserInfoMap">
        <result property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userPassword" column="user_password" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="birthday" column="birthday" jdbcType="VARCHAR"/>
        <result property="email" column="email" jdbcType="VARCHAR"/>
        <result property="qq" column="qq" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="isactive" column="isActive" jdbcType="INTEGER"/>
        <result property="createdate" column="createDate" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserInfoMap">
        select
          user_id, user_name, user_password, sex, birthday, email, qq, role, isActive, createDate
        from jade.user_info
        where user_id = #{userId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserInfoMap">
        select
          user_id, user_name, user_password, sex, birthday, email, qq, role, isActive, createDate
        from jade.user_info
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserInfoMap">
        select
          user_id, user_name, user_password, sex, birthday, email, qq, role, isActive, createDate
        from jade.user_info
        <where>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userPassword != null and userPassword != ''">
                and user_password = #{userPassword}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="birthday != null and birthday != ''">
                and birthday = #{birthday}
            </if>
            <if test="email != null and email != ''">
                and email = #{email}
            </if>
            <if test="qq != null and qq != ''">
                and qq = #{qq}
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
            <if test="isactive != null">
                and isActive = #{isactive}
            </if>
            <if test="createdate != null and createdate != ''">
                and createDate = #{createdate}
            </if>
        </where>
    </select>
    <select id="selectOne" resultType="com.jade.user.entity.UserInfo">
        select user_id,user_password from jade.user_info where user_id = #{userId}
    </select>


    <select id="queryId" resultType="com.jade.user.entity.UserInfo">
     select user_id as userId from jade.user_info where user_name = #{userName} limit 1
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userId" useGeneratedKeys="true">
        insert into jade.user_info(user_name, user_password, sex, birthday, email, qq, createDate)
        values (#{userName}, #{userPassword}, #{sex}, #{birthday}, #{email}, #{qq}, #{createdate})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jade.user_info
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="userPassword != null and userPassword != ''">
                user_password = #{userPassword},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="birthday != null and birthday != ''">
                birthday = #{birthday},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="qq != null and qq != ''">
                qq = #{qq},
            </if>
            <if test="createdate != null and createdate != ''">
                createDate = #{createdate},
            </if>
        </set>
        where user_id = #{userId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from jade.user_info where user_id = #{userId}
    </delete>




</mapper>